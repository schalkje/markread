<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs"
     xmlns:ui="http://wixtoolset.org/schemas/v4/wxs/ui">
  
  <Package Name="MarkRead"
           Manufacturer="MarkRead Project"
           Version="!(bind.FileVersion.MarkRead.exe)"
           UpgradeCode="8E5A9C7B-3D2E-4F1A-9B6D-1C8E5A7F9D3B"
           Language="1033"
           Codepage="1252">
    
    <SummaryInformation Description="MarkRead - Markdown Viewer for Windows"
                       Manufacturer="MarkRead Project"
                       Keywords="Markdown,Viewer,Documentation,Windows" />

    <!-- Require Windows 10 1809 or later -->
    <MajorUpgrade DowngradeErrorMessage="A newer version of MarkRead is already installed." />
    
    <MediaTemplate EmbedCab="yes" />

    <!-- Custom properties -->
    <Property Id="ARPPRODUCTICON" Value="ProductIcon" />
    <Property Id="ARPURLINFOABOUT" Value="https://github.com/schalkje/markread" />
    <Property Id="ARPNOREPAIR" Value="yes" Secure="yes" />
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />

    <!-- Icon -->
    <Icon Id="ProductIcon" SourceFile="..\..\assets\icon.ico" />

    <!-- Directory structure -->
    <StandardDirectory Id="ProgramFiles64Folder">
      <Directory Id="INSTALLFOLDER" Name="MarkRead" />
    </StandardDirectory>

    <StandardDirectory Id="ProgramMenuFolder">
      <Directory Id="ApplicationProgramsFolder" Name="MarkRead" />
    </StandardDirectory>

    <!-- Features -->
    <Feature Id="MainApplication" Title="MarkRead Application" Level="1"
             Description="The main MarkRead application and required files."
             ConfigurableDirectory="INSTALLFOLDER">
      <ComponentGroupRef Id="ProductComponents" />
      <ComponentGroupRef Id="StartMenuShortcuts" />
    </Feature>

    <!-- UI -->
    <ui:WixUI Id="WixUI_InstallDir" />
    <WixVariable Id="WixUILicenseRtf" Value="..\..\assets\License.rtf" />
    <!-- Optional: Create custom images for professional installer branding -->
    <WixVariable Id="WixUIBannerBmp" Value="..\..\assets\installer-banner.bmp" />
    <WixVariable Id="WixUIDialogBmp" Value="..\..\assets\installer-dialog.bmp" />

  </Package>

  <!-- Component Groups -->
  <Fragment>
    <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <!-- Main executable -->
      <Component Id="MarkRead.exe" Guid="A1B2C3D4-E5F6-4A5B-8C7D-1E2F3A4B5C6D">
        <File Id="MarkRead.exe" 
              Source="$(var.MarkRead.App.TargetDir)MarkRead.exe" 
              KeyPath="yes">
          <Shortcut Id="DesktopShortcut"
                    Directory="DesktopFolder"
                    Name="MarkRead"
                    Description="Markdown Viewer for Windows"
                    WorkingDirectory="INSTALLFOLDER"
                    Advertise="yes" />
        </File>
        
        <!-- File association for .md files -->
        <ProgId Id="MarkRead.MarkdownFile" Description="Markdown Document" Icon="MarkRead.exe">
          <Extension Id="md" ContentType="text/markdown">
            <Verb Id="open" Command="Open with MarkRead" TargetFile="MarkRead.exe" Argument='"%1"' />
          </Extension>
        </ProgId>
        <ProgId Id="MarkRead.MarkdownFile2" Description="Markdown Document" Icon="MarkRead.exe">
          <Extension Id="markdown" ContentType="text/markdown">
            <Verb Id="open" Command="Open with MarkRead" TargetFile="MarkRead.exe" Argument='"%1"' />
          </Extension>
        </ProgId>
      </Component>

      <!-- Application DLL and dependencies -->
      <Component Id="MarkRead.dll" Guid="B2C3D4E5-F6A7-4B5C-8D7E-2F3A4B5C6D7E">
        <File Id="MarkRead.dll" Source="$(var.MarkRead.App.TargetDir)MarkRead.dll" />
      </Component>
      
      <Component Id="Config" Guid="C3D4E5F6-A7B8-4C5D-8E7F-3A4B5C6D7E8F">
        <File Id="MarkRead.deps.json" Source="$(var.MarkRead.App.TargetDir)MarkRead.deps.json" />
        <File Id="MarkRead.runtimeconfig.json" Source="$(var.MarkRead.App.TargetDir)MarkRead.runtimeconfig.json" />
      </Component>

      <Component Id="Dependencies" Guid="D4E5F6A7-B8C9-4D5E-8F7A-4B5C6D7E8F9A">
        <File Id="Markdig.dll" Source="$(var.MarkRead.App.TargetDir)Markdig.dll" />
        <File Id="HtmlSanitizer.dll" Source="$(var.MarkRead.App.TargetDir)HtmlSanitizer.dll" />
        <File Id="AngleSharp.dll" Source="$(var.MarkRead.App.TargetDir)AngleSharp.dll" />
        <File Id="AngleSharp.Css.dll" Source="$(var.MarkRead.App.TargetDir)AngleSharp.Css.dll" />
        <File Id="Microsoft.Web.WebView2.Core.dll" Source="$(var.MarkRead.App.TargetDir)Microsoft.Web.WebView2.Core.dll" />
        <File Id="Microsoft.Web.WebView2.WinForms.dll" Source="$(var.MarkRead.App.TargetDir)Microsoft.Web.WebView2.WinForms.dll" />
        <File Id="Microsoft.Web.WebView2.Wpf.dll" Source="$(var.MarkRead.App.TargetDir)Microsoft.Web.WebView2.Wpf.dll" />
      </Component>
    </ComponentGroup>
  </Fragment>

  <!-- Start Menu Shortcuts -->
  <Fragment>
    <ComponentGroup Id="StartMenuShortcuts" Directory="ApplicationProgramsFolder">
      <Component Id="StartMenuShortcut" Guid="D4E5F6A7-B8C9-4D5E-AF9B-4A5B6C7D8E9F">
        <Shortcut Id="ApplicationStartMenuShortcut"
                  Name="MarkRead"
                  Description="Markdown Viewer for Windows"
                  Target="[INSTALLFOLDER]MarkRead.exe"
                  WorkingDirectory="INSTALLFOLDER" />
        <RemoveFolder Id="CleanUpShortCut" Directory="ApplicationProgramsFolder" On="uninstall" />
        <RegistryValue Root="HKCU" 
                      Key="Software\MarkRead" 
                      Name="installed" 
                      Type="integer" 
                      Value="1" 
                      KeyPath="yes" />
      </Component>
    </ComponentGroup>
  </Fragment>

  <!-- Desktop folder reference -->
  <Fragment>
    <StandardDirectory Id="DesktopFolder" />
  </Fragment>

</Wix>
