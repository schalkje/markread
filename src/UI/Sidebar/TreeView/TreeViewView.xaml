<UserControl x:Class="MarkRead.App.UI.Sidebar.TreeView.TreeViewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MarkRead.App.UI.Sidebar.TreeView"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- TreeView -->
        </Grid.RowDefinitions>

        <!-- Header with title and progress indicator -->
        <Grid Grid.Row="0" Margin="8,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="Files" 
                       FontWeight="SemiBold" 
                       FontSize="14"
                       VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <!-- Loading indicator -->
                <TextBlock Text="Loading..." 
                           Margin="0,0,8,0"
                           FontSize="11"
                           Foreground="Gray"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <!-- File count -->
                <TextBlock FontSize="11" 
                           Foreground="Gray"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Run Text="{Binding FileCount, Mode=OneWay}"/>
                    <Run Text=" files"/>
                </TextBlock>
            </StackPanel>
        </Grid>

        <!-- TreeView -->
        <TreeView Grid.Row="1" 
                  x:Name="FileTreeView"
                  ItemsSource="{Binding TreeRoot.Children}"
                  BorderThickness="0"
                  Padding="4"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  SelectedItemChanged="TreeView_SelectedItemChanged">
            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem">
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                    <Setter Property="Visibility" Value="{Binding IsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </Style>
            </TreeView.ItemContainerStyle>
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal" Margin="2">
                        <!-- Icon (folder or file) -->
                        <TextBlock Text="{Binding Type, Converter={StaticResource NodeTypeToIconConverter}}" 
                                   FontFamily="Segoe UI Symbol"
                                   FontSize="14"
                                   Margin="0,0,6,0"
                                   VerticalAlignment="Center"/>
                        
                        <!-- File/folder name -->
                        <TextBlock Text="{Binding Name}" 
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <!-- Empty state message -->
        <TextBlock Grid.Row="1"
                   Text="No markdown files found in this folder"
                   Foreground="Gray"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"
                   Margin="16"
                   Visibility="{Binding TreeRoot.Children.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
    </Grid>
</UserControl>
