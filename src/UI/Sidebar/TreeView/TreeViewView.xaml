<UserControl x:Class="MarkRead.App.UI.Sidebar.TreeView.TreeViewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:MarkRead.App.UI.Sidebar.TreeView"
             xmlns:services="clr-namespace:MarkRead.App.Services"
             xmlns:converters="clr-namespace:MarkRead.App.UI.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="300"
             Background="{DynamicResource ThemeSidebarBackgroundBrush}">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:NodeTypeToIconConverter x:Key="NodeTypeToIconConverter"/>
        <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
        <converters:ExpandedToTextConverter x:Key="ExpandedToTextConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- TreeView -->
        </Grid.RowDefinitions>

        <!-- Header with title and progress indicator -->
        <Grid Grid.Row="0" Margin="8,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="Files" 
                       FontWeight="SemiBold" 
                       FontSize="14"
                       Foreground="{DynamicResource ThemeForegroundBrush}"
                       VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <!-- Loading indicator -->
                <TextBlock Text="Loading..." 
                           Margin="0,0,8,0"
                           FontSize="11"
                           Foreground="{DynamicResource ThemeTextSecondaryBrush}"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <!-- File count -->
                <TextBlock FontSize="11" 
                           Foreground="{DynamicResource ThemeTextSecondaryBrush}"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Run Text="{Binding FileCount, Mode=OneWay}"/>
                    <Run Text=" files"/>
                </TextBlock>
            </StackPanel>

            <!-- T048: Toggle button -->
            <Button Grid.Column="2"
                    Command="{Binding ToggleTreeViewVisibilityCommand}"
                    Content="â´"
                    ToolTip="Hide file tree"
                    Width="24"
                    Height="24"
                    Margin="4,0,0,0"
                    FontSize="12"
                    Padding="2"
                    BorderThickness="1"
                    Background="{DynamicResource ThemeButtonBackgroundBrush}"
                    Foreground="{DynamicResource ThemeForegroundBrush}"
                    BorderBrush="{DynamicResource ThemeBorderBrush}"/>
        </Grid>

        <!-- TreeView -->
        <TreeView Grid.Row="1" 
                  x:Name="FileTreeView"
                  ItemsSource="{Binding TreeRoot.Children}"
                  Background="{DynamicResource ThemeSidebarBackgroundBrush}"
                  Foreground="{DynamicResource ThemeForegroundBrush}"
                  BorderThickness="0"
                  Padding="4"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  SelectedItemChanged="TreeView_SelectedItemChanged">
            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem">
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                    <Setter Property="Visibility" Value="{Binding IsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Padding" Value="4,2"/>
                    <!-- Override default focus visual to prevent white outline -->
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <!-- Custom selection colors that work for both focused and unfocused states -->
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource ThemeTreeViewSelectionBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource ThemeTreeViewSelectionForegroundBrush}"/>
                        </Trigger>
                        <!-- Ensure selected + focused uses same colors as just selected -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True"/>
                                <Condition Property="IsKeyboardFocusWithin" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" Value="{DynamicResource ThemeTreeViewSelectionBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource ThemeTreeViewSelectionForegroundBrush}"/>
                        </MultiTrigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource ThemeButtonHoverBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TreeView.ItemContainerStyle>
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal" Margin="2">
                        <!-- Icon (folder or file) using theme-aware Segoe Fluent Icons -->
                        <TextBlock Text="{Binding Type, Converter={StaticResource NodeTypeToIconConverter}}" 
                                   FontFamily="Segoe Fluent Icons,Segoe UI Symbol"
                                   FontSize="14"
                                   Margin="0,0,6,0"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Type}" Value="{x:Static services:NodeType.Folder}">
                                            <Setter Property="Foreground" Value="{DynamicResource ThemeFolderIconBrush}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Type}" Value="{x:Static services:NodeType.File}">
                                            <Setter Property="Foreground" Value="{DynamicResource ThemeFolderIconBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        
                        <!-- File/folder name -->
                        <TextBlock Text="{Binding Name}" 
                                   Foreground="{DynamicResource ThemeForegroundBrush}"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <!-- Empty state message -->
        <TextBlock Grid.Row="1"
                   Text="No markdown files found in this folder"
                   Foreground="{DynamicResource ThemeTextSecondaryBrush}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"
                   Margin="16"
                   Visibility="{Binding TreeRoot.Children.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
    </Grid>
</UserControl>
