<UserControl x:Class="MarkRead.App.UI.Start.StartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MarkRead.App.UI.Start"
             mc:Ignorable="d"
             d:DesignHeight="400"
             d:DesignWidth="600">
    <Grid Background="{DynamicResource ThemeBackgroundBrush}">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="400"
                    TextElement.FontSize="14"
                    TextElement.FontFamily="Segoe UI">
            
            <!-- App Icon/Logo -->
            <TextBlock Text="📖" 
                       FontSize="72" 
                       HorizontalAlignment="Center" 
                       Foreground="{DynamicResource ThemeTextSecondaryBrush}"
                       Margin="0,0,0,24"/>
            
            <!-- Welcome Title -->
            <TextBlock Text="Welcome to MarkRead"
                       FontSize="28"
                       FontWeight="SemiBold"
                       TextAlignment="Center"
                       Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                       Margin="0,0,0,16" />
            
            <!-- Description -->
            <TextBlock Text="A modern markdown viewer for exploring your documentation"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Foreground="{DynamicResource ThemeTextSecondaryBrush}"
                       Margin="0,0,0,32" />
            
            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,16">
                <Button Content="📁 Open Folder"
                        Padding="20,12"
                        MinWidth="140"
                        FontSize="14"
                        Margin="0,0,8,0"
                        Cursor="Hand"
                        Click="OnOpenFolderClicked" />
                <Button Content="📄 Open File"
                        Padding="20,12"
                        MinWidth="140"
                        FontSize="14"
                        Margin="8,0,0,0"
                        Cursor="Hand"
                        Click="OnOpenFileClicked" />
            </StackPanel>
            
            <!-- Helper Text -->
            <TextBlock Text="You can also drag and drop a folder or file onto this window"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       FontSize="13"
                       Margin="0,24,0,0"
                       Foreground="{DynamicResource ThemeTextSecondaryBrush}"
                       Opacity="0.7" />
        </StackPanel>
    </Grid>
</UserControl>
