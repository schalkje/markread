<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MarkRead"
             xmlns:converters="clr-namespace:MarkRead.Converters"
             x:Class="MarkRead.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Animations.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Value Converters -->
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:LevelToIndentConverter x:Key="LevelToIndentConverter" />
            <converters:NodeTypeToIconConverter x:Key="NodeTypeToIconConverter" />
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:BoolToSearchOptionBackgroundConverter x:Key="BoolToSearchOptionBackgroundConverter" />
            <converters:IsNotNullOrEmptyConverter x:Key="IsNotNullOrEmptyConverter" />

            <!-- Accessibility Converters -->
            <converters:NodeTypeToAccessibilityTextConverter x:Key="NodeTypeToAccessibilityTextConverter" />
            <converters:ExpandStateToHintConverter x:Key="ExpandStateToHintConverter" />
            <converters:NodeTypeToActionHintConverter x:Key="NodeTypeToActionHintConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>