    <Color x:Key="BorderVariantColor" Value="{AppThemeBinding Light={StaticResource LightBorderVariant}, Dark={StaticResource DarkBorderVariant}}" />
    <Color x:Key="DividerColor" Value="{AppThemeBinding Light={StaticResource LightDivider}, Dark={StaticResource DarkDivider}}" />
