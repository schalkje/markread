    <Color x:Key="LightErrorHover">#C82333</Color>
    <Color x:Key="LightSuccess">#28A745</Color>
    <Color x:Key="LightSuccessHover">#218838</Color>
    <Color x:Key="LightWarning">#FFC107</Color>
    <Color x:Key="LightWarningHover">#E0A800</Color>
    <Color x:Key="LightInfo">#17A2B8</Color>
    <Color x:Key="LightInfoHover">#138496</Color>
    
    <!-- UI Element Colors -->
    <Color x:Key="LightHover">#F8F9FA</Color>
    <Color x:Key="LightPressed">#E9ECEF</Color>
    <Color x:Key="LightFocus">#80BDFF</Color>
    <Color x:Key="LightSelected">#E7F3FF</Color>
    <Color x:Key="LightDisabled">#F8F9FA</Color>
    <Color x:Key="LightShadow">#00000040</Color>
    
    <!-- Tab-specific Colors -->
