    <Color x:Key="LightLinkColor">#0078D4</Color>
    <Color x:Key="LightLinkHover">#005A9E</Color>
    <Color x:Key="LightBlockquoteBorder">#6C757D</Color>
    <Color x:Key="LightBlockquoteBackground">#F8F9FA</Color>
    <Color x:Key="LightTableBorder">#DEE2E6</Color>
    <Color x:Key="LightTableHeaderBackground">#F8F9FA</Color>
    
    <!-- Syntax Highlighting (Light) -->
    <Color x:Key="LightSyntaxKeyword">#0000FF</Color>
