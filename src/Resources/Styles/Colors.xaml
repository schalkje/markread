    <Color x:Key="LightSidebarSelected">#E7F3FF</Color>
    
    <!-- Markdown Element Colors -->
    <Color x:Key="LightCodeBlockBackground">#F8F9FA</Color>
    <Color x:Key="LightCodeBlockBorder">#DEE2E6</Color>
    <Color x:Key="LightInlineCodeBackground">#E9ECEF</Color>
    <Color x:Key="LightInlineCodeText">#D63384</Color>
    <Color x:Key="LightLinkColor">#0078D4</Color>
    <Color x:Key="LightLinkHover">#005A9E</Color>
    <Color x:Key="LightBlockquoteBorder">#6C757D</Color>
    <Color x:Key="LightBlockquoteBackground">#F8F9FA</Color>
    <Color x:Key="LightTableBorder">#DEE2E6</Color>
    <Color x:Key="LightTableHeaderBackground">#F8F9FA</Color>
    
    <!-- Syntax Highlighting (Light) -->
    <Color x:Key="LightSyntaxKeyword">#0000FF</Color>
    <Color x:Key="LightSyntaxString">#A31515</Color>
    <Color x:Key="LightSyntaxComment">#008000</Color>
    <Color x:Key="LightSyntaxFunction">#795E26</Color>
    <Color x:Key="LightSyntaxVariable">#001080</Color>
    <Color x:Key="LightSyntaxNumber">#098658</Color>

    <!-- ================================================================ -->
    <!-- DARK THEME COLORS - Fluent Design System Palette -->
    <!-- ================================================================ -->
    
    <!-- Primary Colors -->
    <Color x:Key="DarkBackground">#1E1E1E</Color>
    <Color x:Key="DarkSurface">#2D2D30</Color>
    <Color x:Key="DarkSurfaceVariant">#252526</Color>
