    <!-- ================================================================ -->
    <!-- HIGH CONTRAST COLORS - WCAG AAA Compliant (7:1 contrast ratio) -->
    <!-- ================================================================ -->
    
    <!-- High Contrast Light -->
    <Color x:Key="HighContrastLightBackground">#FFFFFF</Color>
    <Color x:Key="HighContrastLightSurface">#FFFFFF</Color>
    <Color x:Key="HighContrastLightPrimary">#003D7A</Color>
    <Color x:Key="HighContrastLightOnBackground">#000000</Color>
    <Color x:Key="HighContrastLightOnSurface">#000000</Color>
    <Color x:Key="HighContrastLightBorder">#000000</Color>
    <Color x:Key="HighContrastLightFocus">#FF00FF</Color>
    <Color x:Key="HighContrastLightError">#8B0000</Color>
    <Color x:Key="HighContrastLightSuccess">#006400</Color>
    <Color x:Key="HighContrastLightLink">#003D7A</Color>
    
    <!-- High Contrast Dark -->
    <Color x:Key="HighContrastDarkBackground">#000000</Color>
    <Color x:Key="HighContrastDarkSurface">#000000</Color>
    <Color x:Key="HighContrastDarkPrimary">#1AEBFF</Color>
    <Color x:Key="HighContrastDarkOnBackground">#FFFFFF</Color>
    <Color x:Key="HighContrastDarkOnSurface">#FFFFFF</Color>
    <Color x:Key="HighContrastDarkBorder">#FFFFFF</Color>
    <Color x:Key="HighContrastDarkFocus">#FFFF00</Color>
    <Color x:Key="HighContrastDarkError">#FF6666</Color>
    <Color x:Key="HighContrastDarkSuccess">#00FF00</Color>
    <Color x:Key="HighContrastDarkLink">#1AEBFF</Color>

    <!-- ================================================================ -->
    <!-- THEME-AWARE COLORS (using AppThemeBinding) -->
    <!-- ================================================================ -->
    
    <!-- Primary Colors with Theme Binding -->
    <Color x:Key="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}" />
    <Color x:Key="SurfaceColor" Value="{AppThemeBinding Light={StaticResource LightSurface}, Dark={StaticResource DarkSurface}}" />
    <Color x:Key="SurfaceVariantColor" Value="{AppThemeBinding Light={StaticResource LightSurfaceVariant}, Dark={StaticResource DarkSurfaceVariant}}" />
    <Color x:Key="PrimaryColor" Value="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" />
    <Color x:Key="PrimaryVariantColor" Value="{AppThemeBinding Light={StaticResource LightPrimaryVariant}, Dark={StaticResource DarkPrimaryVariant}}" />
    <Color x:Key="PrimaryHoverColor" Value="{AppThemeBinding Light={StaticResource LightPrimaryHover}, Dark={StaticResource DarkPrimaryHover}}" />
    <Color x:Key="SecondaryColor" Value="{AppThemeBinding Light={StaticResource LightSecondary}, Dark={StaticResource DarkSecondary}}" />
    <Color x:Key="SecondaryVariantColor" Value="{AppThemeBinding Light={StaticResource LightSecondaryVariant}, Dark={StaticResource DarkSecondaryVariant}}" />
    
    <!-- Text Colors with Theme Binding -->
    <Color x:Key="OnBackgroundColor" Value="{AppThemeBinding Light={StaticResource LightOnBackground}, Dark={StaticResource DarkOnBackground}}" />
    <Color x:Key="OnSurfaceColor" Value="{AppThemeBinding Light={StaticResource LightOnSurface}, Dark={StaticResource DarkOnSurface}}" />
    <Color x:Key="OnPrimaryColor" Value="{AppThemeBinding Light={StaticResource LightOnPrimary}, Dark={StaticResource DarkOnPrimary}}" />
