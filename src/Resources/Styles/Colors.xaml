    <!-- ================================================================ -->
    <!-- LIGHT THEME COLORS - Fluent Design System Palette -->
    <!-- ================================================================ -->
    
    <!-- Primary Colors -->
    <Color x:Key="LightBackground">#FFFFFF</Color>
    <Color x:Key="LightSurface">#F5F5F5</Color>
    <Color x:Key="LightSurfaceVariant">#FAFAFA</Color>
    <Color x:Key="LightPrimary">#0078D4</Color>
    <Color x:Key="LightPrimaryVariant">#005A9E</Color>
    <Color x:Key="LightPrimaryHover">#106EBE</Color>
    <Color x:Key="LightSecondary">#6C757D</Color>
    <Color x:Key="LightSecondaryVariant">#5A6268</Color>
    
    <!-- Text Colors -->
    <Color x:Key="LightOnBackground">#000000</Color>
    <Color x:Key="LightOnSurface">#212529</Color>
    <Color x:Key="LightOnPrimary">#FFFFFF</Color>
    <Color x:Key="LightTextPrimary">#212529</Color>
    <Color x:Key="LightTextSecondary">#6C757D</Color>
    <Color x:Key="LightTextTertiary">#ADB5BD</Color>
    <Color x:Key="LightTextDisabled">#CED4DA</Color>
    
    <!-- Border & Divider Colors -->
