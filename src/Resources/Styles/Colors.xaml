    <!-- Border & Divider Colors -->
    <Color x:Key="DarkBorder">#3E3E42</Color>
    <Color x:Key="DarkBorderVariant">#37373D</Color>
    <Color x:Key="DarkDivider">#424242</Color>
    <Color x:Key="DarkOutline">#5A5A5D</Color>
    
    <!-- State Colors -->
    <Color x:Key="DarkError">#F44336</Color>
    <Color x:Key="DarkErrorHover">#E53935</Color>
    <Color x:Key="DarkSuccess">#4CAF50</Color>
    <Color x:Key="DarkSuccessHover">#43A047</Color>
    <Color x:Key="DarkWarning">#FFC107</Color>
    <Color x:Key="DarkWarningHover">#FFB300</Color>
    <Color x:Key="DarkInfo">#29B6F6</Color>
    <Color x:Key="DarkInfoHover">#039BE5</Color>
    
    <!-- UI Element Colors -->
    <Color x:Key="DarkHover">#37373D</Color>
    <Color x:Key="DarkPressed">#2D2D30</Color>
    <Color x:Key="DarkFocus">#007ACC</Color>
    <Color x:Key="DarkSelected">#264F78</Color>
    <Color x:Key="DarkDisabled">#37373D</Color>
    <Color x:Key="DarkShadow">#00000080</Color>
    
    <!-- Tab-specific Colors -->
    <Color x:Key="DarkTabActive">#1E1E1E</Color>
    <Color x:Key="DarkTabInactive">#2D2D30</Color>
    <Color x:Key="DarkTabHover">#37373D</Color>
    <Color x:Key="DarkTabBorder">#3E3E42</Color>
    
    <!-- Sidebar Colors -->
    <Color x:Key="DarkSidebarBackground">#252526</Color>
    <Color x:Key="DarkSidebarHover">#2A2D2E</Color>
    <Color x:Key="DarkSidebarSelected">#37373D</Color>
    
    <!-- Markdown Element Colors -->
    <Color x:Key="DarkCodeBlockBackground">#1E1E1E</Color>
    <Color x:Key="DarkCodeBlockBorder">#3E3E42</Color>
    <Color x:Key="DarkInlineCodeBackground">#2D2D30</Color>
    <Color x:Key="DarkInlineCodeText">#E685B5</Color>
    <Color x:Key="DarkLinkColor">#3399FF</Color>
    <Color x:Key="DarkLinkHover">#66B3FF</Color>
    <Color x:Key="DarkBlockquoteBorder">#ADB5BD</Color>
    <Color x:Key="DarkBlockquoteBackground">#2D2D30</Color>
    <Color x:Key="DarkTableBorder">#3E3E42</Color>
    <Color x:Key="DarkTableHeaderBackground">#2D2D30</Color>
    
    <!-- Syntax Highlighting (Dark) -->
    <Color x:Key="DarkSyntaxKeyword">#569CD6</Color>
    <Color x:Key="DarkSyntaxString">#CE9178</Color>
    <Color x:Key="DarkSyntaxComment">#6A9955</Color>
    <Color x:Key="DarkSyntaxFunction">#DCDCAA</Color>
    <Color x:Key="DarkSyntaxVariable">#9CDCFE</Color>
    <Color x:Key="DarkSyntaxNumber">#B5CEA8</Color>

    <!-- ================================================================ -->
    <!-- HIGH CONTRAST COLORS - WCAG AAA Compliant (7:1 contrast ratio) -->
    <!-- ================================================================ -->
    
    <!-- High Contrast Light -->
    <Color x:Key="HighContrastLightBackground">#FFFFFF</Color>
    <Color x:Key="HighContrastLightSurface">#FFFFFF</Color>
    <Color x:Key="HighContrastLightPrimary">#003D7A</Color>
    <Color x:Key="HighContrastLightOnBackground">#000000</Color>
    <Color x:Key="HighContrastLightOnSurface">#000000</Color>
    <Color x:Key="HighContrastLightBorder">#000000</Color>
    <Color x:Key="HighContrastLightFocus">#FF00FF</Color>
    <Color x:Key="HighContrastLightError">#8B0000</Color>
    <Color x:Key="HighContrastLightSuccess">#006400</Color>
    <Color x:Key="HighContrastLightLink">#003D7A</Color>
    
    <!-- High Contrast Dark -->
    <Color x:Key="HighContrastDarkBackground">#000000</Color>
    <Color x:Key="HighContrastDarkSurface">#000000</Color>
    <Color x:Key="HighContrastDarkPrimary">#1AEBFF</Color>
    <Color x:Key="HighContrastDarkOnBackground">#FFFFFF</Color>
    <Color x:Key="HighContrastDarkOnSurface">#FFFFFF</Color>
    <Color x:Key="HighContrastDarkBorder">#FFFFFF</Color>
    <Color x:Key="HighContrastDarkFocus">#FFFF00</Color>
    <Color x:Key="HighContrastDarkError">#FF6666</Color>
    <Color x:Key="HighContrastDarkSuccess">#00FF00</Color>
    <Color x:Key="HighContrastDarkLink">#1AEBFF</Color>

    <!-- ================================================================ -->
    <!-- THEME-AWARE COLORS (using AppThemeBinding) -->
    <!-- ================================================================ -->
    
    <!-- Primary Colors with Theme Binding -->
    <AppThemeBinding x:Key="BackgroundColor" Light="{StaticResource LightBackground}" Dark="{StaticResource DarkBackground}" />
    <AppThemeBinding x:Key="SurfaceColor" Light="{StaticResource LightSurface}" Dark="{StaticResource DarkSurface}" />
    <AppThemeBinding x:Key="SurfaceVariantColor" Light="{StaticResource LightSurfaceVariant}" Dark="{StaticResource DarkSurfaceVariant}" />
    <AppThemeBinding x:Key="PrimaryColor" Light="{StaticResource LightPrimary}" Dark="{StaticResource DarkPrimary}" />
    <AppThemeBinding x:Key="PrimaryVariantColor" Light="{StaticResource LightPrimaryVariant}" Dark="{StaticResource DarkPrimaryVariant}" />
    <AppThemeBinding x:Key="PrimaryHoverColor" Light="{StaticResource LightPrimaryHover}" Dark="{StaticResource DarkPrimaryHover}" />
    <AppThemeBinding x:Key="SecondaryColor" Light="{StaticResource LightSecondary}" Dark="{StaticResource DarkSecondary}" />
    <AppThemeBinding x:Key="SecondaryVariantColor" Light="{StaticResource LightSecondaryVariant}" Dark="{StaticResource DarkSecondaryVariant}" />
    
    <!-- Text Colors with Theme Binding -->
    <AppThemeBinding x:Key="OnBackgroundColor" Light="{StaticResource LightOnBackground}" Dark="{StaticResource DarkOnBackground}" />
    <AppThemeBinding x:Key="OnSurfaceColor" Light="{StaticResource LightOnSurface}" Dark="{StaticResource DarkOnSurface}" />
    <AppThemeBinding x:Key="OnPrimaryColor" Light="{StaticResource LightOnPrimary}" Dark="{StaticResource DarkOnPrimary}" />
    <AppThemeBinding x:Key="TextPrimaryColor" Light="{StaticResource LightTextPrimary}" Dark="{StaticResource DarkTextPrimary}" />
    <AppThemeBinding x:Key="TextSecondaryColor" Light="{StaticResource LightTextSecondary}" Dark="{StaticResource DarkTextSecondary}" />
    <AppThemeBinding x:Key="TextTertiaryColor" Light="{StaticResource LightTextTertiary}" Dark="{StaticResource DarkTextTertiary}" />
    <AppThemeBinding x:Key="TextDisabledColor" Light="{StaticResource LightTextDisabled}" Dark="{StaticResource DarkTextDisabled}" />
    
    <!-- Border & Divider Colors with Theme Binding -->
    <AppThemeBinding x:Key="BorderColor" Light="{StaticResource LightBorder}" Dark="{StaticResource DarkBorder}" />
    <AppThemeBinding x:Key="BorderVariantColor" Light="{StaticResource LightBorderVariant}" Dark="{StaticResource DarkBorderVariant}" />
    <AppThemeBinding x:Key="DividerColor" Light="{StaticResource LightDivider}" Dark="{StaticResource DarkDivider}" />
    <AppThemeBinding x:Key="OutlineColor" Light="{StaticResource LightOutline}" Dark="{StaticResource DarkOutline}" />
    
    <!-- State Colors with Theme Binding -->
    <AppThemeBinding x:Key="ErrorColor" Light="{StaticResource LightError}" Dark="{StaticResource DarkError}" />
    <AppThemeBinding x:Key="ErrorHoverColor" Light="{StaticResource LightErrorHover}" Dark="{StaticResource DarkErrorHover}" />
    <AppThemeBinding x:Key="SuccessColor" Light="{StaticResource LightSuccess}" Dark="{StaticResource DarkSuccess}" />
    <AppThemeBinding x:Key="SuccessHoverColor" Light="{StaticResource LightSuccessHover}" Dark="{StaticResource DarkSuccessHover}" />
    <AppThemeBinding x:Key="WarningColor" Light="{StaticResource LightWarning}" Dark="{StaticResource DarkWarning}" />
    <AppThemeBinding x:Key="WarningHoverColor" Light="{StaticResource LightWarningHover}" Dark="{StaticResource DarkWarningHover}" />
    <AppThemeBinding x:Key="InfoColor" Light="{StaticResource LightInfo}" Dark="{StaticResource DarkInfo}" />
    <AppThemeBinding x:Key="InfoHoverColor" Light="{StaticResource LightInfoHover}" Dark="{StaticResource DarkInfoHover}" />
    
    <!-- UI Element Colors with Theme Binding -->
    <AppThemeBinding x:Key="HoverColor" Light="{StaticResource LightHover}" Dark="{StaticResource DarkHover}" />
    <AppThemeBinding x:Key="PressedColor" Light="{StaticResource LightPressed}" Dark="{StaticResource DarkPressed}" />
    <AppThemeBinding x:Key="FocusColor" Light="{StaticResource LightFocus}" Dark="{StaticResource DarkFocus}" />
    <AppThemeBinding x:Key="SelectedColor" Light="{StaticResource LightSelected}" Dark="{StaticResource DarkSelected}" />
    <AppThemeBinding x:Key="DisabledColor" Light="{StaticResource LightDisabled}" Dark="{StaticResource DarkDisabled}" />
    <AppThemeBinding x:Key="ShadowColor" Light="{StaticResource LightShadow}" Dark="{StaticResource DarkShadow}" />
    
    <!-- Tab Colors with Theme Binding -->
    <AppThemeBinding x:Key="TabActiveColor" Light="{StaticResource LightTabActive}" Dark="{StaticResource DarkTabActive}" />
    <AppThemeBinding x:Key="TabInactiveColor" Light="{StaticResource LightTabInactive}" Dark="{StaticResource DarkTabInactive}" />
    <AppThemeBinding x:Key="TabHoverColor" Light="{StaticResource LightTabHover}" Dark="{StaticResource DarkTabHover}" />
    <AppThemeBinding x:Key="TabBorderColor" Light="{StaticResource LightTabBorder}" Dark="{StaticResource DarkTabBorder}" />
    
    <!-- Sidebar Colors with Theme Binding -->
    <AppThemeBinding x:Key="SidebarBackgroundColor" Light="{StaticResource LightSidebarBackground}" Dark="{StaticResource DarkSidebarBackground}" />
    <AppThemeBinding x:Key="SidebarHoverColor" Light="{StaticResource LightSidebarHover}" Dark="{StaticResource DarkSidebarHover}" />
    <AppThemeBinding x:Key="SidebarSelectedColor" Light="{StaticResource LightSidebarSelected}" Dark="{StaticResource DarkSidebarSelected}" />
    
    <!-- Search Bar Colors with Theme Binding -->
    <AppThemeBinding x:Key="SearchBarBackground" Light="{StaticResource LightSurface}" Dark="{StaticResource DarkSurface}" />
    
    <!-- Markdown Element Colors with Theme Binding -->
    <AppThemeBinding x:Key="CodeBlockBackground" Light="{StaticResource LightCodeBlockBackground}" Dark="{StaticResource DarkCodeBlockBackground}" />
    <AppThemeBinding x:Key="CodeBlockBorderColor" Light="{StaticResource LightCodeBlockBorder}" Dark="{StaticResource DarkCodeBlockBorder}" />
    <AppThemeBinding x:Key="InlineCodeBackground" Light="{StaticResource LightInlineCodeBackground}" Dark="{StaticResource DarkInlineCodeBackground}" />
    <AppThemeBinding x:Key="InlineCodeTextColor" Light="{StaticResource LightInlineCodeText}" Dark="{StaticResource DarkInlineCodeText}" />
