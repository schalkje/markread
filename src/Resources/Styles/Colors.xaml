    <AppThemeBinding x:Key="LinkHoverColor" Light="{StaticResource LightLinkHover}" Dark="{StaticResource DarkLinkHover}" />
    <AppThemeBinding x:Key="BlockquoteBorder" Light="{StaticResource LightBlockquoteBorder}" Dark="{StaticResource DarkBlockquoteBorder}" />
    <AppThemeBinding x:Key="BlockquoteBackgroundColor" Light="{StaticResource LightBlockquoteBackground}" Dark="{StaticResource DarkBlockquoteBackground}" />
    <AppThemeBinding x:Key="TableBorderColor" Light="{StaticResource LightTableBorder}" Dark="{StaticResource DarkTableBorder}" />
    <AppThemeBinding x:Key="TableHeaderBackgroundColor" Light="{StaticResource LightTableHeaderBackground}" Dark="{StaticResource DarkTableHeaderBackground}" />
    
    <!-- Syntax Highlighting Colors with Theme Binding -->
    <AppThemeBinding x:Key="SyntaxKeywordColor" Light="{StaticResource LightSyntaxKeyword}" Dark="{StaticResource DarkSyntaxKeyword}" />
    <AppThemeBinding x:Key="SyntaxStringColor" Light="{StaticResource LightSyntaxString}" Dark="{StaticResource DarkSyntaxString}" />
    <AppThemeBinding x:Key="SyntaxCommentColor" Light="{StaticResource LightSyntaxComment}" Dark="{StaticResource DarkSyntaxComment}" />
    <AppThemeBinding x:Key="SyntaxFunctionColor" Light="{StaticResource LightSyntaxFunction}" Dark="{StaticResource DarkSyntaxFunction}" />
    <AppThemeBinding x:Key="SyntaxVariableColor" Light="{StaticResource LightSyntaxVariable}" Dark="{StaticResource DarkSyntaxVariable}" />
    <AppThemeBinding x:Key="SyntaxNumberColor" Light="{StaticResource LightSyntaxNumber}" Dark="{StaticResource DarkSyntaxNumber}" />

</ResourceDictionary>
