    <Color x:Key="DarkOnPrimary">#FFFFFF</Color>
    <Color x:Key="DarkTextPrimary">#FFFFFF</Color>
    <Color x:Key="DarkTextSecondary">#ADB5BD</Color>
    <Color x:Key="DarkTextTertiary">#6C757D</Color>
