<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <!-- Base control styles -->
    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{DynamicResource BackgroundColor}" />
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource OnBackgroundColor}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="Heading1" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource OnBackgroundColor}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="Margin" Value="0,0,0,16" />
    </Style>

    <Style x:Key="Heading2" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource OnBackgroundColor}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="Margin" Value="0,0,0,12" />
    </Style>

    <Style x:Key="Heading3" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource OnBackgroundColor}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="TextColor" Value="{DynamicResource OnPrimaryColor}" />
        <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryColor}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="MinimumHeightRequest" Value="40" />
    </Style>

    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="TextColor" Value="{DynamicResource OnSurfaceColor}" />
        <Setter Property="BackgroundColor" Value="{DynamicResource SurfaceColor}" />
        <Setter Property="BorderColor" Value="{DynamicResource BorderColor}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="MinimumHeightRequest" Value="40" />
    </Style>

    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{DynamicResource OnSurfaceColor}" />
        <Setter Property="BackgroundColor" Value="{DynamicResource SurfaceColor}" />
        <Setter Property="PlaceholderColor" Value="{DynamicResource SecondaryColor}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="MinimumHeightRequest" Value="40" />
    </Style>

    <Style TargetType="Border">
        <Setter Property="Stroke" Value="{DynamicResource BorderColor}" />
        <Setter Property="StrokeThickness" Value="1" />
    </Style>

    <!-- Markdown viewer styles -->
    <Style x:Key="MarkdownContainer" TargetType="ContentView">
        <Setter Property="BackgroundColor" Value="{DynamicResource BackgroundColor}" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <!-- TreeView/Sidebar styles -->
    <Style x:Key="SidebarContainer" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{DynamicResource SurfaceColor}" />
        <Setter Property="Stroke" Value="{DynamicResource DividerColor}" />
        <Setter Property="StrokeThickness" Value="1" />
    </Style>

    <Style x:Key="TreeNodeLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource OnSurfaceColor}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Padding" Value="8,4" />
    </Style>

    <!-- Tab styles -->
    <Style x:Key="TabContainer" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{DynamicResource SurfaceColor}" />
        <Setter Property="Stroke" Value="{DynamicResource DividerColor}" />
        <Setter Property="StrokeThickness" Value="0,0,0,1" />
    </Style>

    <Style x:Key="TabButton" TargetType="Button">
        <Setter Property="TextColor" Value="{DynamicResource OnSurfaceColor}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="CornerRadius" Value="0" />
    </Style>

    <!-- Keyboard Focus Indicator Styles -->
    <!-- Note: Focus indicators are handled via VisualStateManager in individual controls -->
    <!-- These styles can be applied explicitly to buttons and entries that need focus indicators -->
    
    <Style x:Key="FocusIndicatorBorder" TargetType="Border">
        <Setter Property="Stroke" Value="{DynamicResource PrimaryColor}" />
        <Setter Property="StrokeThickness" Value="2" />
    </Style>

</ResourceDictionary>
