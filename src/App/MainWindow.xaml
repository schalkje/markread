<Window x:Class="MarkRead.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:start="clr-namespace:MarkRead.App.UI.Start"
        xmlns:tabs="clr-namespace:MarkRead.App.UI.Tabs"
        xmlns:find="clr-namespace:MarkRead.App.UI.Find"
        mc:Ignorable="d"
        Title="MarkRead" Height="720" Width="1080"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tab Bar -->
        <tabs:TabsView x:Name="TabsBar"
                       Grid.Row="0"
                       Visibility="Collapsed"/>

        <!-- Content Area -->
        <Grid Grid.Row="1">
            <wv2:WebView2 x:Name="MarkdownView"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Margin="0"
                          DefaultBackgroundColor="Transparent"
                          Visibility="Collapsed" />

            <Border x:Name="StartOverlay"
                    Background="#F0F3F8"
                    Visibility="Visible">
                <start:StartView />
            </Border>
        </Grid>

        <!-- Find Bar -->
        <find:FindBar x:Name="FindBar"
                      Grid.Row="2"/>
    </Grid>
</Window>
