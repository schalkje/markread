<Window x:Class="MarkRead.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:local="clr-namespace:MarkRead.App"
        xmlns:shell="clr-namespace:MarkRead.App.UI.Shell"
        xmlns:start="clr-namespace:MarkRead.App.UI.Start"
        xmlns:tabs="clr-namespace:MarkRead.App.UI.Tabs"
        xmlns:find="clr-namespace:MarkRead.App.UI.Find"
        xmlns:treeview="clr-namespace:MarkRead.App.UI.Sidebar.TreeView"
        mc:Ignorable="d"
        Title="MarkRead" Height="720" Width="1080"
        Loaded="Window_Loaded">
    <!-- T068: Keyboard shortcuts for refresh -->
    <Window.InputBindings>
        <KeyBinding Key="R" Modifiers="Control" Command="{Binding ElementName=TreeViewControl, Path=DataContext.RefreshTreeViewCommand}"/>
        <KeyBinding Key="F5" Command="{Binding ElementName=TreeViewControl, Path=DataContext.RefreshTreeViewCommand}"/>
    </Window.InputBindings>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Open Folder..." Command="{x:Static local:App.OpenFolderCommand}" InputGestureText="Ctrl+O"/>
                <MenuItem Header="Open F_ile..." Command="{x:Static local:App.OpenFileCommand}" InputGestureText="Ctrl+Shift+O"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click" InputGestureText="Alt+F4"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Find..." Command="{x:Static local:App.FindInDocumentCommand}" InputGestureText="Ctrl+F"/>
            </MenuItem>
            <MenuItem Header="_Navigate">
                <MenuItem Header="_Back" Command="{x:Static shell:NavigationCommands.GoBack}" InputGestureText="Alt+Left"/>
                <MenuItem Header="_Forward" Command="{x:Static shell:NavigationCommands.GoForward}" InputGestureText="Alt+Right"/>
            </MenuItem>
        </Menu>

        <!-- Tab Control (just for tab headers, not content) -->
        <TabControl x:Name="TabControl"
                    Grid.Row="1"
                    Visibility="Collapsed"
                    SelectionChanged="TabControl_SelectionChanged"
                    BorderThickness="0"
                    Background="Transparent"
                    Padding="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="#CCCCCC" Background="White" Padding="12,6" Margin="0,0,2,0">
                                    <ContentPresenter ContentSource="Header"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="White"/>
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#999999"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="#F0F0F0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabControl.ItemTemplate>
                <DataTemplate DataType="{x:Type tabs:TabItem}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Title}" 
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>
                        <Button Content="×"
                                FontSize="14"
                                FontWeight="Bold"
                                Width="16"
                                Height="16"
                                Padding="0"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                ToolTip="Close tab"
                                Click="CloseTab_Click"
                                Tag="{Binding Id}"/>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <!-- Empty - content is shown in MarkdownView below -->
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

        <!-- Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <!-- T049: Bind column width to IsTreeViewVisible -->
                <ColumnDefinition x:Name="SidebarColumn" 
                                  Width="{Binding ElementName=TreeViewControl, Path=DataContext.IsTreeViewVisible, Converter={StaticResource BoolToGridLengthConverter}}" 
                                  MinWidth="0"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar with TreeView -->
            <Border Grid.Column="0"
                    x:Name="SidebarBorder"
                    BorderBrush="#CCCCCC"
                    BorderThickness="0,0,1,0"
                    Background="White"
                    Visibility="{Binding ElementName=TreeViewControl, Path=DataContext.IsTreeViewVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                <treeview:TreeViewView x:Name="TreeViewControl"/>
            </Border>

            <!-- GridSplitter for resizing -->
            <GridSplitter Grid.Column="1"
                          x:Name="SidebarSplitter"
                          Width="5"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Background="Transparent"
                          ShowsPreview="False"
                          Visibility="{Binding ElementName=TreeViewControl, Path=DataContext.IsTreeViewVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <!-- Main content area -->
            <Grid Grid.Column="2">
                <!-- Single WebView2 for all tabs -->
                <wv2:WebView2 x:Name="MarkdownView"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              Margin="0"
                              DefaultBackgroundColor="Transparent"
                              Visibility="Collapsed" />

                <!-- Start Overlay -->
                <Border x:Name="StartOverlay"
                        Background="#F0F3F8"
                        Visibility="Visible">
                    <start:StartView />
                </Border>
            </Grid>
        </Grid>

        <!-- Find Bar -->
        <find:FindBar x:Name="FindBar"
                      Grid.Row="3"/>
    </Grid>
</Window>
