<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs"
     xmlns:ui="http://wixtoolset.org/schemas/v4/wxs/ui">
  
  <Package Name="MarkRead"
           Manufacturer="schalken.net"
           Version="!(bind.FileVersion.MarkRead.exe)"
           UpgradeCode="8E5A9C7B-3D2E-4F1A-9B6D-1C8E5A7F9D3B"
           Language="1033"
           Codepage="1252">
    
    <SummaryInformation Description="MarkRead - Markdown Viewer for Windows"
                       Manufacturer="schalken.net"
                       Keywords="Markdown,Viewer,Documentation,Windows" />

    <!-- Require Windows 10 1809 or later -->
    <MajorUpgrade DowngradeErrorMessage="A newer version of MarkRead is already installed." />
    
    <MediaTemplate EmbedCab="yes" />

    <!-- Custom properties -->
    <Property Id="ARPPRODUCTICON" Value="ProductIcon" />
    <Property Id="ARPURLINFOABOUT" Value="https://github.com/schalkje/markread" />
    <Property Id="ARPNOREPAIR" Value="yes" Secure="yes" />
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />

    <!-- Icon -->
    <Icon Id="ProductIcon" SourceFile="..\assets\icon.ico" />

    <!-- Directory structure -->
    <StandardDirectory Id="ProgramFiles64Folder">
      <Directory Id="INSTALLFOLDER" Name="MarkRead">
        <Directory Id="RuntimesFolder" Name="runtimes">
          <Directory Id="WinX64Folder" Name="win-x64">
            <Directory Id="NativeFolder" Name="native" />
          </Directory>
        </Directory>
        <Directory Id="RenderingFolder" Name="Rendering">
          <Directory Id="AssetsFolder" Name="assets">
            <Directory Id="HighlightFolder" Name="highlight" />
            <Directory Id="IconsFolder" Name="icons" />
            <Directory Id="MermaidFolder" Name="mermaid" />
            <Directory Id="PrismFolder" Name="prism">
              <Directory Id="PrismComponentsFolder" Name="components" />
              <Directory Id="PrismThemesFolder" Name="themes" />
            </Directory>
            <Directory Id="ScriptsFolder" Name="scripts" />
            <Directory Id="StylesFolder" Name="styles" />
          </Directory>
          <Directory Id="HtmlTemplateFolder" Name="template" />
        </Directory>
      </Directory>
    </StandardDirectory>

    <StandardDirectory Id="ProgramMenuFolder">
      <Directory Id="ApplicationProgramsFolder" Name="MarkRead" />
    </StandardDirectory>

    <!-- Features -->
    <Feature Id="MainApplication" Title="MarkRead Application" Level="1"
             Description="The main MarkRead application and required files."
             ConfigurableDirectory="INSTALLFOLDER">
      <ComponentGroupRef Id="ProductComponents" />
      <ComponentGroupRef Id="NativeRuntimes" />
      <ComponentGroupRef Id="RenderingAssets" />
      <ComponentGroupRef Id="StartMenuShortcuts" />
      <ComponentRef Id="EnvironmentPath" />
    </Feature>

    <!-- UI -->
    <ui:WixUI Id="WixUI_InstallDir" />
    <WixVariable Id="WixUILicenseRtf" Value="..\assets\License.rtf" />
    <!-- Optional: Create custom images for professional installer branding -->
    <WixVariable Id="WixUIBannerBmp" Value="..\assets\installer-banner.bmp" />
    <WixVariable Id="WixUIDialogBmp" Value="..\assets\installer-dialog.bmp" />

  </Package>

  <!-- Component Groups -->
  <Fragment>
    <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <!-- Main executable -->
      <Component Id="MarkRead.exe" Guid="A1B2C3D4-E5F6-4A5B-8C7D-1E2F3A4B5C6D">
        <File Id="MarkRead.exe" 
              Source="$(var.MarkRead.App.TargetDir)MarkRead.exe" 
              KeyPath="yes">
          <Shortcut Id="DesktopShortcut"
                    Directory="DesktopFolder"
                    Name="MarkRead"
                    Description="Markdown Viewer for Windows"
                    WorkingDirectory="INSTALLFOLDER"
                    Advertise="yes" />
        </File>
        
        <!-- File association for .md files -->
        <ProgId Id="MarkRead.MarkdownFile" Description="Markdown Document" Icon="MarkRead.exe">
          <Extension Id="md" ContentType="text/markdown">
            <Verb Id="open" Command="Open with MarkRead" TargetFile="MarkRead.exe" Argument='"%1"' />
          </Extension>
        </ProgId>
        <ProgId Id="MarkRead.MarkdownFile2" Description="Markdown Document" Icon="MarkRead.exe">
          <Extension Id="markdown" ContentType="text/markdown">
            <Verb Id="open" Command="Open with MarkRead" TargetFile="MarkRead.exe" Argument='"%1"' />
          </Extension>
        </ProgId>
      </Component>

      <!-- Application DLL and dependencies -->
      <Component Id="MarkRead.dll" Guid="B2C3D4E5-F6A7-4B5C-8D7E-2F3A4B5C6D7E">
        <File Id="MarkRead.dll" Source="$(var.MarkRead.App.TargetDir)MarkRead.dll" />
      </Component>

      <!-- Add to PATH -->
      <Component Id="EnvironmentPath" Guid="E7F8A9B0-C1D2-4E3F-9A0B-5C6D7E8F9A0B">
        <Environment Id="PATH" 
                     Name="PATH" 
                     Value="[INSTALLFOLDER]" 
                     Permanent="no" 
                     Part="last" 
                     Action="set" 
                     System="yes" />
        <RegistryValue Root="HKLM" 
                      Key="Software\MarkRead" 
                      Name="PathInstalled" 
                      Type="integer" 
                      Value="1" 
                      KeyPath="yes" />
      </Component>
      
      <Component Id="Config" Guid="C3D4E5F6-A7B8-4C5D-8E7F-3A4B5C6D7E8F">
        <File Id="MarkRead.deps.json" Source="$(var.MarkRead.App.TargetDir)MarkRead.deps.json" />
        <File Id="MarkRead.runtimeconfig.json" Source="$(var.MarkRead.App.TargetDir)MarkRead.runtimeconfig.json" />
      </Component>

      <Component Id="Dependencies" Guid="D4E5F6A7-B8C9-4D5E-8F7A-4B5C6D7E8F9A">
        <File Id="Markdig.dll" Source="$(var.MarkRead.App.TargetDir)Markdig.dll" />
        <File Id="HtmlSanitizer.dll" Source="$(var.MarkRead.App.TargetDir)HtmlSanitizer.dll" />
        <File Id="AngleSharp.dll" Source="$(var.MarkRead.App.TargetDir)AngleSharp.dll" />
        <File Id="AngleSharp.Css.dll" Source="$(var.MarkRead.App.TargetDir)AngleSharp.Css.dll" />
        <File Id="Microsoft.Web.WebView2.Core.dll" Source="$(var.MarkRead.App.TargetDir)Microsoft.Web.WebView2.Core.dll" />
        <File Id="Microsoft.Web.WebView2.WinForms.dll" Source="$(var.MarkRead.App.TargetDir)Microsoft.Web.WebView2.WinForms.dll" />
        <File Id="Microsoft.Web.WebView2.Wpf.dll" Source="$(var.MarkRead.App.TargetDir)Microsoft.Web.WebView2.Wpf.dll" />
      </Component>
    </ComponentGroup>
  </Fragment>

  <!-- Native Runtimes -->
  <Fragment>
    <ComponentGroup Id="NativeRuntimes">
      <Component Id="WebView2LoaderX64" Directory="NativeFolder" Guid="F2A3B4C5-D6E7-4F5A-AB8C-6D7E8F9A0B1C">
        <File Id="WebView2Loader.dll" 
              Source="$(var.MarkRead.App.TargetDir)runtimes\win-x64\native\WebView2Loader.dll" 
              KeyPath="yes" />
      </Component>
    </ComponentGroup>
  </Fragment>

  <!-- Rendering Assets -->
  <Fragment>
    <ComponentGroup Id="RenderingAssets">
      <!-- Template -->
      <Component Id="Template" Directory="HtmlTemplateFolder" Guid="E5F6A7B8-C9D0-4E5F-9A8B-5C6D7E8F9A0B">
        <File Id="index.html" Source="$(var.MarkRead.App.TargetDir)Rendering\template\index.html" KeyPath="yes" />
      </Component>
      
      <!-- Highlight.js assets -->
      <Component Id="HighlightAssets" Directory="HighlightFolder" Guid="F6A7B8C9-D0E1-4F5A-AB8C-6D7E8F9A0B1C">
        <File Id="highlight.min.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\highlight\highlight.min.js" />
      </Component>
      
      <!-- Mermaid assets -->
      <Component Id="MermaidAssets" Directory="MermaidFolder" Guid="A7B8C9D0-E1F2-4A5B-BC8D-7E8F9A0B1C2D">
        <File Id="mermaid.min.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\mermaid\mermaid.min.js" />
      </Component>
      
      <!-- Prism components -->
      <Component Id="PrismComponents" Directory="PrismComponentsFolder" Guid="B8C9D0E1-F2A3-4B5C-CD8E-8F9A0B1C2D3E">
        <File Id="prism_core.min.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\prism\components\prism-core.min.js" />
        <File Id="prism_clike.min.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\prism\components\prism-clike.min.js" KeyPath="yes" />
        <File Id="prism_javascript.min.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\prism\components\prism-javascript.min.js" />
        <File Id="prism_markup.min.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\prism\components\prism-markup.min.js" />
        <File Id="prism_css.min.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\prism\components\prism-css.min.js" />
        <File Id="prism_csharp.min.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\prism\components\prism-csharp.min.js" />
        <File Id="prism_python.min.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\prism\components\prism-python.min.js" />
        <File Id="prism_java.min.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\prism\components\prism-java.min.js" />
        <File Id="prism_json.min.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\prism\components\prism-json.min.js" />
        <File Id="prism_yaml.min.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\prism\components\prism-yaml.min.js" />
        <File Id="prism_markdown.min.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\prism\components\prism-markdown.min.js" />
        <File Id="prism_bash.min.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\prism\components\prism-bash.min.js" />
        <File Id="prism_powershell.min.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\prism\components\prism-powershell.min.js" />
        <File Id="prism_sql.min.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\prism\components\prism-sql.min.js" />
        <File Id="prism_typescript.min.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\prism\components\prism-typescript.min.js" />
        <File Id="prism_autoloader.min.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\prism\components\prism-autoloader.min.js" />
        <File Id="prism_line_numbers.min.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\prism\components\prism-line-numbers.min.js" />
        <File Id="prism_toolbar.min.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\prism\components\prism-toolbar.min.js" />
        <File Id="prism_copy_to_clipboard.min.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\prism\components\prism-copy-to-clipboard.min.js" />
      </Component>
      
      <!-- Prism themes -->
      <Component Id="PrismThemes" Directory="PrismThemesFolder" Guid="C9D0E1F2-A3B4-4C5D-DE8F-9A0B1C2D3E4F">
        <File Id="prism.min.css" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\prism\themes\prism.min.css" KeyPath="yes" />
        <File Id="prism_tomorrow.min.css" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\prism\themes\prism-tomorrow.min.css" />
        <File Id="prism_line_numbers.min.css" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\prism\themes\prism-line-numbers.min.css" />
        <File Id="prism_toolbar.min.css" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\prism\themes\prism-toolbar.min.css" />
      </Component>
      
      <!-- Scripts -->
      <Component Id="Scripts" Directory="ScriptsFolder" Guid="D0E1F2A3-B4C5-4D5E-EF9A-0B1C2D3E4F5A">
        <File Id="render.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\scripts\render.js" KeyPath="yes" />
        <File Id="find.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\scripts\find.js" />
        <File Id="theme_bridge.js" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\scripts\theme-bridge.js" />
      </Component>
      
      <!-- Styles -->
      <Component Id="Styles" Directory="StylesFolder" Guid="E1F2A3B4-C5D6-4E5F-FA0B-1C2D3E4F5A6B">
        <File Id="base.css" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\styles\base.css" KeyPath="yes" />
        <File Id="markdown_base.css" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\styles\markdown-base.css" />
        <File Id="responsive.css" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\styles\responsive.css" />
        <File Id="theme_variables.css" Source="$(var.MarkRead.App.TargetDir)Rendering\assets\styles\theme-variables.css" />
      </Component>
    </ComponentGroup>
  </Fragment>

  <!-- Start Menu Shortcuts -->
  <Fragment>
    <ComponentGroup Id="StartMenuShortcuts" Directory="ApplicationProgramsFolder">
      <Component Id="StartMenuShortcut" Guid="D4E5F6A7-B8C9-4D5E-AF9B-4A5B6C7D8E9F">
        <Shortcut Id="ApplicationStartMenuShortcut"
                  Name="MarkRead"
                  Description="Markdown Viewer for Windows"
                  Target="[INSTALLFOLDER]MarkRead.exe"
                  WorkingDirectory="INSTALLFOLDER" />
        <RemoveFolder Id="CleanUpShortCut" Directory="ApplicationProgramsFolder" On="uninstall" />
        <RegistryValue Root="HKCU" 
                      Key="Software\MarkRead" 
                      Name="installed" 
                      Type="integer" 
                      Value="1" 
                      KeyPath="yes" />
      </Component>
    </ComponentGroup>
  </Fragment>

  <!-- Desktop folder reference -->
  <Fragment>
    <StandardDirectory Id="DesktopFolder" />
  </Fragment>

</Wix>
