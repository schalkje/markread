<UserControl x:Class="MarkRead.App.UI.Settings.ViewerSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MarkRead.App.UI.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24"
                    MaxWidth="800">
            
            <!-- Zoom Settings Group -->
            <GroupBox Header="Zoom Settings"
                      Margin="0,0,0,24"
                      Padding="16"
                      Style="{DynamicResource DefaultGroupBox}">
                <StackPanel>
                    <TextBlock Text="Default Zoom Mode"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                               Margin="0,0,0,8"/>
                    
                    <TextBlock Text="Choose how newly opened tabs should be zoomed."
                               FontSize="12"
                               Foreground="{DynamicResource ThemeTextSecondaryBrush}"
                               Margin="0,0,0,12"
                               TextWrapping="Wrap"/>
                    
                    <RadioButton x:Name="PercentageMode"
                                 Content="Fixed Percentage"
                                 IsChecked="True"
                                 Margin="0,0,0,8"
                                 GroupName="ZoomMode"
                                 Checked="ZoomMode_Changed"/>
                    
                    <RadioButton x:Name="FitToWidthMode"
                                 Content="Fit to Screen Width"
                                 Margin="0,0,0,16"
                                 GroupName="ZoomMode"
                                 Checked="ZoomMode_Changed"/>
                    
                    <TextBlock Text="Default Zoom Percentage"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                               Margin="0,8,0,8"/>
                    
                    <TextBlock Text="Set the default zoom level when using fixed percentage mode."
                               FontSize="12"
                               Foreground="{DynamicResource ThemeTextSecondaryBrush}"
                               Margin="0,0,0,12"
                               TextWrapping="Wrap"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Slider x:Name="ZoomSlider"
                                Grid.Column="0"
                                Minimum="10"
                                Maximum="200"
                                TickFrequency="10"
                                IsSnapToTickEnabled="True"
                                Value="100"
                                VerticalAlignment="Center"
                                Margin="0,0,16,0"
                                ValueChanged="ZoomSlider_ValueChanged"/>
                        
                        <TextBlock x:Name="ZoomValueText"
                                   Grid.Column="1"
                                   Text="100%"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource ThemeAccentBrush}"
                                   VerticalAlignment="Center"
                                   MinWidth="60"
                                   TextAlignment="Right"
                                   Margin="0,0,12,0"/>
                        
                        <Button x:Name="ResetZoomButton"
                                Grid.Column="2"
                                Content="Reset"
                                Padding="12,4"
                                Click="ResetZoom_Click"
                                ToolTip="Reset to 100%"/>
                    </Grid>
                    
                    <TextBlock Text="Applies to newly opened tabs only"
                               FontSize="11"
                               FontStyle="Italic"
                               Foreground="{DynamicResource ThemeTextTertiaryBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </GroupBox>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
